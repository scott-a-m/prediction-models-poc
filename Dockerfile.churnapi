# Dockerfile.churn

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy churn API code and shared utils
COPY churn_api /app/churn_api
COPY shared /app/shared

# Run the API
CMD ["uvicorn", "churn_api.app.main:app", "--host", "0.0.0.0", "--port", "8080"]